    function requestPayment(){
      $.post('',
        {
          status: "payRequested",
        },
        function(data, status){
          let pathArray = window.location.href.split('/');
          pathArray.pop();
          let newPathname = pathArray.join('/');
          window.location.replace(newPathname+"/review");
        }
